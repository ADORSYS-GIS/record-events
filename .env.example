# EventServer Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# MinIO S3-Compatible Storage Configuration
# =============================================================================
# MinIO credentials (default for local development)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# AWS credentials (for MinIO compatibility)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# EventServer storage configuration (MinIO)
EVENTSERVER__STORAGE__ENDPOINT=http://minio:9000
EVENTSERVER__STORAGE__ACCESS_KEY_ID=minioadmin
EVENTSERVER__STORAGE__SECRET_ACCESS_KEY=minioadmin
EVENTSERVER__STORAGE__REGION=us-east-1
EVENTSERVER__STORAGE__BUCKET=eventserver-storage
EVENTSERVER__STORAGE__USE_PATH_STYLE=true
EVENTSERVER__STORAGE__ENABLE_SSL=false
EVENTSERVER__STORAGE__UPLOAD_TIMEOUT=300
EVENTSERVER__STORAGE__MAX_FILE_SIZE=104857600

# =============================================================================
# AWS S3 Storage Configuration (Alternative to MinIO)
# =============================================================================
# Uncomment and configure these if you want to use AWS S3 instead of MinIO
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# EVENTSERVER__STORAGE__ENDPOINT=
# EVENTSERVER__STORAGE__ACCESS_KEY_ID=your_aws_access_key_id
# EVENTSERVER__STORAGE__SECRET_ACCESS_KEY=your_aws_secret_access_key
# EVENTSERVER__STORAGE__USE_PATH_STYLE=false
# EVENTSERVER__STORAGE__ENABLE_SSL=true

# =============================================================================
# Security Configuration
# =============================================================================
# JWT secret for certificate signing (use a strong, random secret in production)
JWT_SECRET=your_super_secure_jwt_secret_here
EVENTSERVER__SECURITY__JWT_SECRET=your_super_secure_jwt_secret_here

# =============================================================================
# Server Configuration
# =============================================================================
# Server host and port (usually don't need to change for Docker)
EVENTSERVER__SERVER__HOST=0.0.0.0
EVENTSERVER__SERVER__PORT=8080

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# =============================================================================
# Frontend Configuration
# =============================================================================
# API base URL for frontend (adjust for your deployment)
VITE_API_BASE_URL=http://localhost:8080
VITE_APP_TITLE=EventServer

# =============================================================================
# Development Configuration
# =============================================================================
# Set to 'true' to enable development mode features
DEVELOPMENT_MODE=false

# Docker Compose profiles to enable (dev, prod, monitoring, etc.)
COMPOSE_PROFILES=

# =============================================================================
# Production Deployment Configuration
# =============================================================================
# Domain name for production deployment
DOMAIN_NAME=your-domain.com

# SSL/TLS configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Container registry for deployment
CONTAINER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# =============================================================================
# Monitoring and Observability (Optional)
# =============================================================================
# Enable metrics and tracing
ENABLE_METRICS=false
ENABLE_TRACING=false

# External monitoring endpoints
METRICS_ENDPOINT=
TRACING_ENDPOINT=