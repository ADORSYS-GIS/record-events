# EventServer Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# MinIO S3-Compatible Storage Configuration (for use with envconfig)
# =============================================================================
# MinIO credentials (default for local development)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# S3/MinIO storage configuration (used by envconfig)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1
S3_BUCKET=eventserver-storage
S3_USE_PATH_STYLE=true
S3_ENABLE_SSL=false
S3_UPLOAD_TIMEOUT=300
S3_MAX_FILE_SIZE=104857600
S3_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,video/mp4

# =============================================================================
# Security Configuration
# =============================================================================
# JWT secret for certificate signing (use a strong, random secret in production)
JWT_SECRET=your_super_secure_jwt_secret_here

# =============================================================================
# Server Configuration
# =============================================================================
# Server host and port (usually don't need to change for Docker)
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# =============================================================================
# Frontend Configuration
# =============================================================================
# API base URL for frontend (adjust for your deployment)
VITE_API_BASE_URL=http://localhost:8080
VITE_APP_TITLE=EventServer

# =============================================================================
# Development Configuration
# =============================================================================
# Set to 'true' to enable development mode features
DEVELOPMENT_MODE=false

# Docker Compose profiles to enable (dev, prod, monitoring, etc.)
COMPOSE_PROFILES=

# =============================================================================
# Production Deployment Configuration
# =============================================================================
# Domain name for production deployment
SERVER_NAME=

# SSL/TLS configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/certs/server.crt
SSL_KEY_PATH=/etc/nginx/certs/server.key

# Container registry for deployment
IMAGE_TAG=latest

# =============================================================================
# Monitoring and Observability (Optional)
# =============================================================================
# Enable metrics and tracing
ENABLE_METRICS=false
ENABLE_TRACING=false

# External monitoring endpoints
METRICS_ENDPOINT=
TRACING_ENDPOINT=